{
  "openapi": "3.0.0",
  "info": {
    "title": "oplog.se API",
    "description": "This is the API for oplog.se",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://oplog.se/api/v1"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login",
        "description": "This is to authenticate the user. If successful it return a cookie to be used in subsquent requests",
        "requestBody": {
          "content": {
            "schema": {
              "required": ["username, password"],
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          },
          "required": true
        }
      }
    }
  }
}
